#!/usr/bin/env bash
export SHELL="$(command -v bash)"

msgcommand=""

if [ -n "$SWAYSOCK" ]; then
    msgcommand="swaymsg"
elif pgrep -xq i3; then
    msgcommand="i3-msg"
fi

if [ -z "$msgcommand" ]; then
    echo "No running instance of Sway or i3 detected."
    exit 1
fi

exec "$msgcommand" "$@"

